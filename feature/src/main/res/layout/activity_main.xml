<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.95"
        android:scaleType="centerCrop"
        android:src="@drawable/earthhour1" />

    <ProgressBar
        android:id="@+id/sProgressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:minHeight="20dp"
        android:max="100"
        android:progress="60"
        android:progressDrawable="@drawable/custom_progress" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sProgressBar"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="sans-serif-light"
                android:gravity="left"
                android:text="@string/total_km_flied"
                android:textAllCaps="false"
                android:textColor="#EBEBEB"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/totalKmFlyed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="right"
                android:text="@string/placeholder"
                android:textColor="#EBEBEB"
                android:textSize="26sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="sans-serif-light"
                android:gravity="left"
                android:text="@string/trips_around_earth"
                android:textAllCaps="false"
                android:textColor="#EBEBEB"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/totalTripsAroundEarth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="right"
                android:text="@string/placeholder"
                android:textColor="#EBEBEB"
                android:textSize="26sp" />
        </RelativeLayout>

        <Spinner
            android:id="@+id/spinnerFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#F7F7F7"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"

            />

        <Spinner
            android:id="@+id/spinnerTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="#F7F7F7"
            android:paddingBottom="4dp"
            android:paddingTop="4dp" />


    </LinearLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/btn_txt"
        android:textColor="#F7F7F7"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tripDistance"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/coformation"
        android:textColor="#EBEBEB"
        android:text=""
        android:textSize="40sp" />
    <TextView
        android:id="@+id/coformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/btnSubmit"
        android:textColor="#EBEBEB"
        android:layout_margin="4sp"
        android:text="@string/submit_txt"/>


</RelativeLayout>
