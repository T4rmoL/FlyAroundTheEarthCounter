<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/earthhour1"
        android:alpha="0.9"/>

    <ProgressBar
        android:id="@+id/sProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:progressDrawable="@drawable/custom_progress"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:max="100"
        android:progress="80"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/sProgressBar">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center_horizontal"
            android:textSize="26sp"
            android:textColor="#EBEBEB"
            android:fontFamily="sans-serif-light"
            android:textAllCaps="true"
            android:text="Total km flyed" />

        <TextView
            android:id="@+id/totalKmFlyed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center_horizontal"
            android:textSize="36sp"
            android:textColor="#EBEBEB"
            android:fontFamily="sans-serif-medium"
            android:text="0" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:entries="@array/destination_array"
            android:background="#F7F7F7"
            />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:entries="@array/destination_array2"
            android:background="#F7F7F7"
            />


    </LinearLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:text="OK"
        android:textColor="#F7F7F7"
        android:textSize="30sp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:onClick="calculateDistance"
        />



</RelativeLayout>
